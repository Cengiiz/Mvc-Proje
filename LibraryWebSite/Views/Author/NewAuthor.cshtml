@model LibraryDTO.AuthorDTO
@{
    ViewBag.Title = "NewAusthor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="width:25%;margin-top:250px;">
    <form method="post">

        <div>
            <div>
                <label>New Austhor Name</label>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required" })
            </div>
            <div>
                <label>New Austhor Surname</label>
                @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", required = "required" })
            </div>
            <div style="margin-top:15px">
                <button class="btn btn-info" id="alert">Add Authors</button>
            </div>
        </div>
    </form>
</div>

